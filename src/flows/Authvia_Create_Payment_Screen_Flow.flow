        <locationX>178</locationX>
        <locationY>476</locationY>
        <defaultConnector>
            <targetReference>Contact_Not_Active_Screen</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Not Active</defaultConnectorLabel>
        <rules>
            <name>Active</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Contact.BillNPay__Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Active</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Get_Contact.BillNPay__authViaAccountId__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Store_Original_Email</targetReference>
            </connector>
            <label>Active</label>
        </rules>
    </decisions>
    <formulas>
        <name>Formula_Description</name>
        <dataType>String</dataType>
